<%# <div class="form-container"> %>
<%= form_with model: task do |f| %>
  <div class="title-form">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="title-form">
    <%= f.label :details %>
    <%= f.text_field :details %>
  </div>
  <% if !task.new_record? %>
    <%= f.check_box(:completed) %>
    <%= f.label(:completed, "Complete?") %>
  <% end %>
  <div class="submit">
    <button type="button" class="btn btn-primary btn-lg"><%= link_to "Back to the list", tasks_path%></button>
    <%= f.submit "Save" %>
  </div>
<% end %>
<%# </div> %>
