<div class="container">
  <h1>My tasks 📋</h1>
  <%# <%= @tasks.inspect %>
  <button type="button" class="btn btn-primary btn-lg"><%= link_to "New Task ✍🏻", new_task_path%></button>
</div>
<div class="border">
  <% @tasks.each do |task| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <div class="trash">
          <p class="card-text"> <%= link_to "🗑️",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
        </div>
        <h3 class="card-title"><%=link_to task.title, task_path(task)%> <input type="checkbox" id="title" name="title" <%= task.completed ? "checked" : "" %> /></h3>
      </h3>
    </div>
  </div>
<% end %>
</div>
